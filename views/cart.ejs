<%- include('./partials/header') %>

    <div class="w-full px-4 md:px-10 py-10">
        <div class="flex flex-wrap justify-center gap-6">
            <% let totalAmount=0; %>
                <% user.cart.forEach(function (item, index) { %>
                    <div class="w-full md:w-[25%] rounded-md overflow-hidden shadow-lg bg-white">
                        <div
                            class="w-full flex justify-center items-center h-60 <%= item.bgcolor ? 'bg-custom' + index : '' %>">
                            <!-- Ensuring the image is of the same size -->
                            <img class="h-full max-h-full object-contain max-w-full"
                                src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                        </div>
                        <div
                            class="w-full flex justify-between px-5 py-4 <%= item.panelcolor ? 'panel-custom' + index : '' %>">
                            <h3 class="text-xl text-black">
                                <%= item.name %>
                            </h3>
                            <div class="flex items-center gap-2">
                                <i
                                    class="w-7 h-7 bg-black flex rounded-full items-center justify-center ri-add-line"></i>
                                <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                                <i
                                    class="w-7 h-7 bg-black flex rounded-full items-center justify-center ri-subtract-line"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between px-5 py-3 text-black">
                            <h4 class="text-lg">Net Total</h4>
                            <h2 class="text-lg"> ₹ <%= item.price - item.discount %>
                            </h2>
                        </div>

                        <!-- Price Breakdown -->
                        <div class="w-full px-5 py-3 text-black">
                            <h3 class="text-lg">Price Breakdown</h3>
                            <div class="mt-3">
                                <div class="flex justify-between mt-2">
                                    <h4>Total MRP</h4>
                                    <h4>₹ <%= item.price %>
                                    </h4>
                                </div>
                                <div class="flex justify-between mt-2">
                                    <h4>Discount on MRP</h4>
                                    <h4>₹ <%= item.discount %>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% totalAmount +=(item.price - item.discount); %>
                        <% }) %>
        </div>

        <!-- Total Amount Section -->
        <div class="w-full mt-10 bg-white rounded-md shadow-lg p-5">
            <h3 class="text-xl text-black mb-3">Total Summary</h3>
            <div class="flex justify-between text-black">
                <h4>Platform Fee</h4>
                <h4>₹ 20</h4>
            </div>
            <div class="flex justify-between mt-2 text-black">
                <h4>Shipping Fee</h4>
                <h4>FREE</h4>
            </div>
            <div class="w-full h-[1px] bg-gray-300 my-4"></div>
            <div class="flex justify-between text-black">
                <h3 class="text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= totalAmount + 20 %>
                </h3>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>